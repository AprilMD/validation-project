{% extends "govuk/template.njk" %}

{% block head %}
  <!--[if !IE 8]><!-->
    <link href="/stylesheets/main.css" rel="stylesheet">
  <!--<![endif]-->

  {# For Internet Explorer 8, you need to compile specific stylesheet #}
  {# see https://frontend.design-system.service.gov.uk/supporting-ie8/#support-internet-explorer-8 #}
  <!--[if IE 8]>
    <link href="/govuk-frontend/all-ie8.css" rel="stylesheet">
  <![endif]-->

  {# For older browsers to allow them to recognise HTML5 elements such as `<header>` #}
  <!--[if lt IE 9]>
    <script src="/html5-shiv/html5shiv.js"></script>
  <![endif]-->
{% endblock %} 

{% block pageTitle %}
 {{ serviceName }}
{% endblock %}

{% block beforeContent %}
  <a class="govuk-back-link" href="javascript:window.history.back()">Back</a>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-xl" data-cy="page-heading">
      How to upload
    </h1>

    <h2 class="govuk-heading-m">Make sure:</h2>
    <ul class="govuk-list govuk-list--bullet">
      <li>your background is clear</li>
      <li>your documents are well lit and in focus</li>
      <li>all details are visible</li>
    </ul>


    <h2 class="govuk-heading-m">When taking a photo:</h2>

    <ul class="govuk-list govuk-list--bullet">
      <li>do not use flash as this can blur the image</li>
      <li>take one photo of each document</li>
    </ul>

  
    <h2 class="govuk-heading-m">To upload a document:</h2>

    <ul class="govuk-list govuk-list--bullet">
      <li>select type of photo ID from the dropdown menu</li>
      <li>choose photo ID file and select upload</li>
      <li>provide expiration date for chosen document</li>
    </ul>

    <h2 class="govuk-heading-m">Video tutorial</h2>

    <video controls width="360" data-cy="video">

      <source src="" type="video/webm">

      <source src="" type="video/mp4">

      Sorry, your browser doesn't support embedded videos.
    </video>
    <br>
    <br>

    {% from "govuk/components/details/macro.njk" import govukDetails %}

    {{ govukDetails({
    summaryText: "I need help doing things online",
    text: "For assistance in completing this task, please call 0xxxxxxxxx ... etc, ... more
    text...",
    attributes: {
        "data-cy": "details"
    }
    }) }}


    <a href="/upload-photo-id"><button class="govuk-button" data-module="govuk-button" data-cy="continue-button">Continue</button></a>

  </div>
</div>
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script src="/javascripts/govuk.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}