{% extends "govuk/template.njk" %}

{% block head %}
  <!--[if !IE 8]><!-->
    <link href="/stylesheets/main.css" rel="stylesheet">
  <!--<![endif]-->

  {# For Internet Explorer 8, you need to compile specific stylesheet #}
  {# see https://frontend.design-system.service.gov.uk/supporting-ie8/#support-internet-explorer-8 #}
  <!--[if IE 8]>
    <link href="/govuk-frontend/all-ie8.css" rel="stylesheet">
  <![endif]-->

  {# For older browsers to allow them to recognise HTML5 elements such as `<header>` #}
  <!--[if lt IE 9]>
    <script src="/html5-shiv/html5shiv.js"></script>
  <![endif]-->
{% endblock %} 

{% block pageTitle %}
 {{ serviceName }}
{% endblock %}

{% block beforeContent %}
  <a class="govuk-back-link" href="javascript:window.history.back()">Back</a>
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl" data-cy="page-heading">Upload photo ID</h1>
        <h2 class="govuk-heading-m">Make sure:</h2>
        <ul class="govuk-list govuk-list--bullet">
          <li>your background is clear</li>
          <li>your documents are well lit and in focus</li>
          <li>all details are visible</li>
        </ul>
    
        <form class="form" method="post">

            {% from "govuk/components/select/macro.njk" import govukSelect %}
            {% if errorIdType %}
            {{ govukSelect({
                id: "photo-id-type",
                name: "photo-id-type",
                label: {
                    text: "Select type of photo ID",
                    classes: "govuk-label--m"
                },
                items: [
                    {
                        text: "--------------------------"
                    },
                    {
                        value: "Passport",
                        text: "Passport"
                    },
                    {
                        value: "Driving License",
                        text: "Driving License"
                    },
                    {
                        value: "Formal ID Card",
                        text: "Formal ID Card"
                    }
                ],
                errorMessage: {
                    text: "Select an ID type"
                },
                attributes: {
                    "data-cy": "photo-id-type"
                }
            }) }}
            {% else %}
            {{ govukSelect({
                id: "photo-id-type",
                name: "photo-id-type",
                value: data['photo-id-type'],
                label: {
                    text: "Select type of photo ID",
                    classes: "govuk-label--m"
                },
                items: [
                    {
                        text: "--------------------------"
                    },
                    {
                        value: "Passport",
                        text: "Passport"
                    },
                    {
                        value: "Driving License",
                        text: "Driving License"
                    },
                    {
                        value: "Formal ID Card",
                        text: "Formal ID Card"
                    }
                ],
                attributes: {
                    "data-cy": "photo-id-type"
                }
            }) }}
            {% endif %}
            {% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
            {% if errorNoIdFile %}
            {{ govukFileUpload({
                id: "photo-ID",
                name: "photo-ID",
                label: {
                    text: "Select photo ID file",
                    classes: "govuk-label--m"
                },
                hint: {
                    html: "We can accept the following file types: .jpg .jpeg .png .pdf<br />We can accept a file with the maximum size of 15mb."
                },
                errorMessage: {
                    text: "Choose a file to upload"
                },
                attributes: {
                    "data-cy": "photo-ID"
                }
            }) }}
            {% else %}
            {{ govukFileUpload({
                id: "photo-ID",
                name: "photo-ID",
                value: data['photo-ID'],
                label: {
                    text: "Select photo ID file",
                    classes: "govuk-label--m"
                },
                hint: {
                    html: "We can accept the following file types: .jpg .jpeg .png .pdf<br />We can accept a file with the maximum size of 15mb."
                },
                attributes: {
                    "data-cy": "photo-ID"
                }
            }) }}
            {% endif %}
            {% from "govuk/components/date-input/macro.njk" import govukDateInput %}
            
            {% if errorNoDate %}
            {{ govukDateInput({
                id: "expiration-date",
                namePrefix: "expiration-date",
                fieldset: {
                    legend: {
                        text: "Expiration date",
                        isPageHeading: false,
                        classes: "govuk-fieldset__legend--m"
                    }
                },
                hint: {
                    text: "Please use the day, month, year format. For example, 27 03 2007"
                },
                errorMessage: {
                    text: "Enter the expiration date of your document"
                },
                attributes: {
                    "data-cy": "expiration-date"
                }
            }) }}
            {% elseif errorInvalidDate %}
            {{ govukDateInput({
                id: "expiration-date",
                namePrefix: "expiration-date",
                fieldset: {
                    legend: {
                        text: "Expiration date",
                        isPageHeading: false,
                        classes: "govuk-fieldset__legend--m"
                    }
                },
                hint: {
                    text: "Please use the day, month, year format. For example, 27 03 2007"
                },
                errorMessage: {
                    text: "Enter a valid expiration date"
                },
                attributes: {
                    "data-cy": "expiration-date"
                }
            }) }}
            {% elseif errorPastDate %}
            {{ govukDateInput({
                id: "expiration-date",
                namePrefix: "expiration-date",
                fieldset: {
                    legend: {
                        text: "Expiration date",
                        isPageHeading: false,
                        classes: "govuk-fieldset__legend--m"
                    }
                },
                hint: {
                    text: "Please use the day, month, year format. For example, 27 03 2007"
                },
                errorMessage: {
                    text: "Expiration date must be in the future"
                },
                attributes: {
                    "data-cy": "expiration-date"
                }
            }) }}
            {% else %}
            {{ govukDateInput({
                id: "expiration-date",
                namePrefix: "expiration-date",
                fieldset: {
                    legend: {
                        text: "Expiration date",
                        isPageHeading: false,
                        classes: "govuk-fieldset__legend--m"
                    }
                },
                hint: {
                    text: "Please use the day, month, year format. For example, 27 03 2007"
                },
                attributes: {
                    "data-cy": "expiration-date"
                }
            }) }}
            {% endif %}

            <button class="govuk-button" data-module="govuk-button" data-cy="continue-button">Submit my photo ID</button>

        </form>

    </div>

    
</div>
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script src="/javascripts/govuk.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}